<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE connector PUBLIC '-//Sun Microsystems, Inc.//DTD Connector 1.0//EN' 'http://java.sun.com/dtd/connector_1_0.dtd'>
  <connector>
    <display-name>
      MailClientAdapter
    </display-name>
    <description>adapter for Java Mail Client</description>
    <icon>
    	<small-icon>small-icon</small-icon>
    </icon>
    <vendor-name>
      pinternals.com
    </vendor-name>
    <spec-version>
      1.5
    </spec-version>
    <eis-type>Java Mail Client</eis-type>
    <version>
      0.1
    </version>
    <resourceadapter>
      <managedconnectionfactory-class>
        com.pinternals.mailclientadapter.SPIManagedConnectionFactory
      </managedconnectionfactory-class>
      <connectionfactory-interface>
        javax.resource.cci.ConnectionFactory
      </connectionfactory-interface>
      <connectionfactory-impl-class>
        com.pinternals.mailclientadapter.CCIConnectionFactory
      </connectionfactory-impl-class>
      <connection-interface>
        javax.resource.cci.Connection
      </connection-interface>
      <connection-impl-class>
        com.pinternals.mailclientadapter.CCIConnection
      </connection-impl-class>
      <transaction-support>
        NoTransaction
      </transaction-support>
      <config-property>
        <config-property-name>
          adapterType
        </config-property-name>
        <config-property-type>
          java.lang.String
        </config-property-type>
        <config-property-value>
          MailClientAdapter
        </config-property-value>
      </config-property>
      <config-property>
        <config-property-name>
          adapterNamespace
        </config-property-name>
        <config-property-type>
          java.lang.String
        </config-property-type>
        <config-property-value>
          urn:pinternals-adapters
        </config-property-value>
      </config-property>
      <authentication-mechanism>
        <authentication-mechanism-type>
          BasicPassword
        </authentication-mechanism-type>
        <credential-interface>
          javax.resource.spi.security.PasswordCredential
        </credential-interface>
      </authentication-mechanism>
      <reauthentication-support>
        false
      </reauthentication-support>
    </resourceadapter>
  </connector>